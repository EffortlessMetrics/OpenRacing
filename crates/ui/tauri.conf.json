{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "OpenRacing",
    "version": "0.1.0",
    "identifier": "com.openracing.app",
    "build": {
        "beforeDevCommand": "",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "",
        "frontendDist": "dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "OpenRacing - Racing Wheel Manager",
                "width": 1280,
                "height": 800,
                "minWidth": 800,
                "minHeight": 600,
                "resizable": true,
                "fullscreen": false,
                "center": true,
                "decorations": true,
                "transparent": false
            }
        ],
        "security": {
            "csp": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; connect-src 'self' ipc: http://ipc.localhost"
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/icon.ico"
        ],
        "publisher": "OpenRacing",
        "category": "Utility",
        "shortDescription": "Racing wheel force feedback manager",
        "longDescription": "OpenRacing is a safety-critical racing wheel and force feedback simulation software. It provides real-time FFB processing at 1kHz with sub-millisecond latency for sim-racing enthusiasts and professionals.",
        "copyright": "Copyright Â© 2024 OpenRacing Contributors",
        "license": "MIT OR Apache-2.0",
        "licenseFile": "../../LICENSE-MIT",
        "resources": [],
        "externalBin": [],
        "windows": {
            "certificateThumbprint": null,
            "digestAlgorithm": "sha256",
            "timestampUrl": "",
            "wix": null,
            "nsis": null
        },
        "linux": {
            "appimage": {
                "bundleMediaFramework": false
            },
            "deb": {
                "depends": [
                    "libwebkit2gtk-4.1-0",
                    "libgtk-3-0"
                ],
                "section": "utils",
                "priority": "optional"
            },
            "rpm": {
                "release": "1",
                "epoch": 0
            }
        },
        "macOS": {
            "entitlements": null,
            "exceptionDomain": null,
            "frameworks": [],
            "minimumSystemVersion": "10.13",
            "signingIdentity": null
        }
    },
    "plugins": {
        "dialog": {
            "open": true,
            "save": true
        }
    }
}