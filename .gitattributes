# Auto-detect text files and normalize line endings
* text=auto

# Force LF for common source files
*.rs   text eol=lf
*.toml text eol=lf
*.md   text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.sh   text eol=lf
*.py   text eol=lf
*.rules text eol=lf
*.conf  text eol=lf

# Force CRLF for Windows-specific files
*.bat  text eol=crlf
*.cmd  text eol=crlf
*.ps1  text eol=crlf

# Binary files
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.wasm binary
